<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des utilisateurs</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; background-color: #f2f2f2; }
        h2 { color: #333; }
        table { width: 80%; margin: 20px auto; border-collapse: collapse; }
        th, td { border: 1px solid black; padding: 10px; text-align: center; }
        th { background-color: #4CAF50; color: white; }
        a { display: inline-block; margin-top: 20px; text-decoration: none; padding: 10px 15px; background-color: blue; color: white; border-radius: 5px; }
        a:hover { background-color: darkblue; }
    </style>
</head>
<body>

    <h2>Liste des utilisateurs inscrits</h2>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody id="userTableBody"></tbody>
    </table>

    <a href="index.html">Retour</a>

    <script>
        function afficherListeUtilisateurs() {
            let utilisateurs = JSON.parse(localStorage.getItem("utilisateurs")) || [];
            let userTableBody = document.getElementById("userTableBody");
            userTableBody.innerHTML = "";

            utilisateurs.forEach(function(utilisateur) {
                let row = `<tr><td>${utilisateur.nom}</td><td>${utilisateur.email}</td></tr>`;
                userTableBody.innerHTML += row;
            });
        }

        afficherListeUtilisateurs();
    </script>

</body>
</html>
